<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

<h2>Login here: </h2>

<form action="/login" method="post">
  <label>Username: </label>
  <input type="text" name="username">
  <br><br>
  <label>Password: </label>
  <input type="password" name="password">
  <br><br>
  <input type="submit" value="Login">
</form>
